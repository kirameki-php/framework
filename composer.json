{
  "name": "taka-oyama/exelion",
  "type": "project",
  "require": {
    "ext-apcu": "*",
    "ext-json": "*",
    "ext-pcntl": "*",
    "ext-pdo": "*",
    "ext-posix": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~9.0"
  },
  "suggest": {
    "fiunchinho/phpunit-randomizer": "For randomizing phpunit tests",
    "antecedent/patchwork": "For method redefinition for tests"
  },
  "autoload": {
    "psr-4": {
      "Exelion\\": "src/"
    },
    "files": [
      "src/Support/constants.php",
      "src/Support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "discard-changes": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
