{
  "name": "kirameki/framework",
  "description": "API Framework for PHP",
  "bin": ["bin/kirameki"],
  "type": "project",
  "require": {
    "php": ">= 8.1",
    "ext-apcu": "*",
    "ext-ctype": "*",
    "ext-igbinary": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-pcntl": "*",
    "ext-pdo": "*",
    "ext-posix": "*",
    "bramus/ansi-php": "^3.1",
    "monolog/monolog": "^2.2",
    "ramsey/uuid": "^4.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.4",
    "phpunit/phpunit": "~9.0",
    "symfony/var-dumper": "^6"
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-mbstring": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*"
  },
  "suggest": {
    "fiunchinho/phpunit-randomizer": "For randomizing phpunit tests",
    "antecedent/patchwork": "For method redefinition for tests"
  },
  "autoload": {
    "psr-4": {
      "Kirameki\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Kirameki\\": "tests/src/"
    }
  },
  "config": {
    "discard-changes": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "analyze": "vendor/bin/phpstan analyse --memory-limit 1G"
  }
}
